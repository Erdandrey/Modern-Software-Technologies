
@{
    ViewBag.Title = "CreateBuy";
}

<h3>Существующие заявки</h3>
<table class = "table">
    <tr><td><p>Имя</p></td><td><p>   Марка </p></td><td><p>    Модель</p></td></tr> 
    @foreach (var c in ViewBag.Buys)
    {
<tr>
    <td><p>@c.Name</p></td>
    <td><p>@c.CarBrand</p></td>
    <td><p>@c.CarModelModel</p></td>
</tr>
}
</table>
<h3>Форма подачи заявки на приобретение автомобиля</h3>
<form method="post" action="">
    <table class = "table">
        <tr><td><p>Введите свое имя </p></td><td><input type="text" name="Name" /> </td></tr>
        <tr>
            <td><p>Выберите из списка марку автомобиля :</p></td>
            <td>
                <select name="CarBrand">
                    @foreach (var cr in ViewBag.Cars)
                    {
                        <option>@cr.Brand</option>
                    }
                </select>
            </td>
            <td><p>Выберите из списка модель автомобиля :</p></td>
            <td>
                <select name="CarModelModel">
                    @foreach (var cr in ViewBag.Cars)
                    {
                        <option>@cr.CarModel</option>
                    }
                </select>
            </td>
        </tr>
        <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
    </table>
</form>

