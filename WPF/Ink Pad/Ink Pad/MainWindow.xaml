<Window x:Class="Ink_Pad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ink_Pad"
        mc:Ignorable="d"
        Title="Ink Pad" Height="550" Width="370" Background="Gray">
    <Grid>
        <InkCanvas  x:Name="InkCanvas" HorizontalAlignment="Stretch" Margin="10,10,2,35" VerticalAlignment="Stretch" Background="LightYellow" AutomationProperties.Name="InkCanvas"/>
        <Button x:Name="button" Content="Clear" HorizontalAlignment="Left" Margin="10,489,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="button1" Content="Close" HorizontalAlignment="Left" Margin="277,489,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>

    </Grid>
</Window>
